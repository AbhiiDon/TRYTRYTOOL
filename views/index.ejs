<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Bot</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .input-group { margin-bottom: 15px; }
        #qrcode { font-family: monospace; }
    </style>
</head>
<body>
    <h1>WhatsApp Bot</h1>
    <div id="qrcode-container">
        <h2>Scan QR Code</h2>
        <pre id="qrcode"></pre>
    </div>
    <div id="login-status"></div>

    <div id="message-inputs" style="display:none;">
        <h2>Send Messages</h2>
        <div class="input-group">
            <label for="sendTo">Send To (number/group):</label>
            <input type="text" id="sendTo" placeholder="Enter number or group UID">
        </div>
        <div class="input-group">
            <label for="timeInterval">Time Interval (seconds):</label>
            <input type="number" id="timeInterval" placeholder="Enter time interval">
        </div>
        <div class="input-group">
            <label for="messageFile">Upload Message File:</label>
            <input type="file" id="messageFile" accept=".txt">
        </div>
        <button onclick="startSending()">Start Sending</button>
    </div>

    <script>
        function setQRCode(qr) {
            document.getElementById('qrcode').textContent = qr;
        }

        function setLoginStatus(status) {
            document.getElementById('login-status').textContent = status;
            document.getElementById('message-inputs').style.display = 'block';
        }

        function startSending() {
            const numberOrGroup = document.getElementById('sendTo').value;
            const interval = document.getElementById('timeInterval').value;
            const messageFile = document.getElementById('messageFile').files[0];

            const formData = new FormData();
            formData.append('sendTo', numberOrGroup);
            formData.append('timeInterval', interval);
            formData.append('messageFile', messageFile);

            fetch('/send-messages', {
                method: 'POST',
                body: formData
            }).then(response => response.json()).then(data => {
                console.log(data);
                alert("Messages will be sent!");
            });
        }
    </script>
</body>
</html>
