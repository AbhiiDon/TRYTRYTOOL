<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Bot</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            padding: 20px;
        }

        h1, h2 {
            color: #4CAF50;
        }

        form {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            color: #333;
        }

        input, textarea, select {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        input[type="file"] {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
        }

        input[type="number"], select, textarea {
            background-color: #f1f8e9;
            border: 2px solid #8bc34a;
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #45a049;
        }

        #fieldsContainer div {
            margin-bottom: 20px;
        }
    </style>
    <script>
        function generateFields() {
            const runCount = document.getElementById('runCount').value;
            const fieldsContainer = document.getElementById('fieldsContainer');
            fieldsContainer.innerHTML = ''; // Clear existing fields

            for (let i = 0; i < runCount; i++) {
                const div = document.createElement('div');
                div.innerHTML = `
                    <label for="runType${i}">Select Type (number/group):</label>
                    <select name="runType${i}" id="runType${i}">
                        <option value="number">Number</option>
                        <option value="group">Group</option>
                    </select>
                    <input type="text" name="runId${i}" placeholder="Enter number or group UID" required>
                `;
                fieldsContainer.appendChild(div);
            }
        }
    </script>
</head>
<body>
    <h1>WhatsApp Bot</h1>
    
    <form action="/submit" method="post" enctype="multipart/form-data">
        <label for="runCount">How many places to run?</label>
        <input type="number" id="runCount" name="runCount" min="1" required>
        <button type="button" onclick="generateFields()">Generate Fields</button>
        
        <div id="fieldsContainer"></div> <!-- Dynamic input fields will be generated here -->
        
        <label for="timeInterval">Time interval (seconds):</label>
        <input type="number" id="timeInterval" name="timeInterval" required>
        
        <label for="messageFile">Upload Message File:</label>
        <input type="file" id="messageFile" name="messageFile" accept=".txt" required>

        <button type="submit">Send Messages</button>
    </form>

    <% if (qr) { %>
        <h2>Scan QR Code:</h2>
        <img src="<%= qr %>" alt="QR Code">
    <% } %>
</body>
</html>
